<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <title>Mini Mart</title>
    <%- include('./css/style'); %>
    <%- include('./css/css'); %>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css" rel="stylesheet"
    integrity="sha384-1BmE4kWBq78iYhFldvKuhfTAU6auU8tT94WrHftjDbrCEXSU1oBoqyl2QvZ6jIW3"
    crossorigin="anonymous">  
</head>

<body>


    <%- include('Nav2')%>


        <div class="container-lgx a">
            <div class="image"></div>
            <form class="user bg-w r" method="post" action="/registers">
                <div class="text-center">
                    <h1 class="h4 text-gray-900 mb-4">Create an Account Member!</h1>
                </div>
                <div class="form-group row">
                    <div class="col-sm-6 mb-3">
                        <input type="text" name="fname" class="form-control form-control-user" placeholder="First Name">
                    </div>
                    <div class="col-sm-6">
                        <input type="text" name="lname" class="form-control form-control-user" placeholder="Last Name">
                    </div>
                </div>
                <div class="form-group mb-3">
                    <input type="email" name="email" class="form-control form-control-user" placeholder="Email">
                </div>
                <div class="form-group row mb-3">
                    <div class="col-sm-5 mb-4">
                        <input type="text" name="phone" class="form-control form-control-user" placeholder="Phone">
                    </div>
                    <div class="col-sm-7">
                        <input type="text" name="password" class="form-control form-control-user" placeholder="Password">
                    </div>
                </div>
                <hr />
                <div class="text-center">
                    <input type="submit" class="btn btn-outline-primary mb-3" value="Register">
                </div>

            </form>
        </div>

</body>

</html>